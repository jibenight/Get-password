<style>
  .legal-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
    box-shadow: var(--shadow-soft);
  }

  h1 {
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2.5rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  h2 {
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    font-size: 1.5rem;
    border-bottom: 2px solid var(--color-accent);
    padding-bottom: 0.5rem;
  }

  p {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  ul {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  .back-link {
    margin-top: 3rem;
    text-align: center;
  }

  .back-link a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s;
  }

  .back-link a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .legal-container {
      margin: 1rem;
      padding: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.3rem;
    }
  }
</style>
