---
import '../styles/password.css';
---

<div class='container'>
  <h2>Générateur de Mots de Passe</h2>

  <div class='password-display'>
    <div id='passwordList' class='password-list'>
      <!-- Les mots de passe générés seront ajoutés ici -->
    </div>

    <div class='options'>
      <div class='count-option'>
        <label for='passwordCount'
          >Nombre de mots de passe: <span id='countValue'>1</span></label
        >
        <input type='range' id='passwordCount' min='1' max='10' value='1' />
      </div>

      <div class='length-option'>
        <label for='passwordLength'
          >Longueur: <span id='lengthValue'>16</span></label
        >
        <input type='range' id='passwordLength' min='8' max='64' value='16' />
      </div>

      <div class='checkbox-options'>
        <label>
          <input type='checkbox' id='uppercase' checked />
          Majuscules (A-Z)
        </label>
        <label>
          <input type='checkbox' id='lowercase' checked />
          Minuscules (a-z)
        </label>
        <label>
          <input type='checkbox' id='numbers' checked />
          Chiffres (0-9)
        </label>
        <label>
          <input type='checkbox' id='symbols' checked />
          Symboles (!@#$%^&*)
        </label>
      </div>
    </div>
  </div>

  <div class='strength-meter'>
    <label>Force du mot de passe:</label>
    <div class='strength-bars'>
      <div class='bar'></div>
      <div class='bar'></div>
      <div class='bar'></div>
      <div class='bar'></div>
    </div>
  </div>

  <button id='generateButton' class='generate-button'>Générer</button>
</div>

<style>
  .container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  h2 {
    color: #2c3e50;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .password-display {
    margin-bottom: 2rem;
  }

  .options {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .count-option,
  .length-option {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  input[type='range'] {
    width: 100%;
    margin: 0.5rem 0;
  }

  .checkbox-options {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #333;
  }

  .strength-meter {
    margin: 1.5rem 0;
  }

  .strength-bars {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .bar {
    height: 8px;
    flex: 1;
    background: #e0e0e0;
    border-radius: 4px;
    transition: background-color 0.3s;
  }

  .bar.weak {
    background-color: #ff4444;
  }
  .bar.medium {
    background-color: #ffbb33;
  }
  .bar.strong {
    background-color: #00c851;
  }
  .bar.very-strong {
    background-color: #007e33;
  }

  .generate-button {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    color: white;
    background: #4caf50;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .generate-button:hover {
    background: #45a049;
  }
</style>

<script>
  import('../scripts/passwordGenerator.js')
    .then(module => {
      console.log('Module chargé, initialisation du générateur...'); // Debug
      
      // Attendre que le DOM soit complètement chargé
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          module.initPasswordGenerator();
        });
      } else {
        module.initPasswordGenerator();
      }
    })
    .catch(error => {
      console.error('Erreur lors du chargement du module:', error);
    });
</script>
