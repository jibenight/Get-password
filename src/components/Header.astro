---
const currentPath = Astro.url.pathname;
---

<header>
  <nav>
    <div class='logo'>
      <a href='/'>
        <span class='logo-text'>üîê Get-password</span>
      </a>
    </div>
    <div class='nav-toggle'>
      <button class='toggle-button classic' data-type='classic'>
        Mode Classique
      </button>
      <button class='toggle-button memorable active' data-type='memorable'>
        Mode M√©morable
      </button>
    </div>
    <div class='nav-theme'>
      <button
        class='toggle-button dark-mode-toggle'
        onclick='toggleDarkMode()'
        aria-label='Basculer le mode sombre'
      >
        <span class='moon-icon'>üåô</span>
        <span class='sun-icon'>‚òÄÔ∏è</span>
      </button>
    </div>
  </nav>
</header>

<style>
  header {
  background: var(--color-bg-dark); /* Variable pour s'adapter au mode sombre/clair */
  border-bottom: 1px solid var(--color-border-color);
  position: sticky;
  top: 0;
  z-index: 1000;
  box-shadow: var(--shadow-soft);
  transition: background-color 0.3s, box-shadow 0.3s;
}

nav {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo a {
  text-decoration: none;
  color: var(--color-text-primary); /* Adapt√© au th√®me actif */
  font-weight: bold;
  font-size: 1.2rem;
  transition: color 0.3s;
}

.logo a:hover {
  color: var(--color-text-secondary); /* Transition vers la couleur secondaire */
}

.nav-toggle {
  display: flex;
  gap: 0.5rem;
}

.toggle-button {
  padding: 0.6rem 1.2rem;
  background-color: var(--color-bg-dark); /* Variable pour s'adapter */
  color: var(--color-text-secondary); /* Texte secondaire */
  border: 1px solid var(--color-border-color);
  border-radius: 6px;
  cursor: pointer;
  font-size: 0.9rem;
  font-weight: 500;
  transition: background-color 0.3s, color 0.3s, border-color 0.3s;
}

.toggle-button:hover {
  background-color: var(--color-accent-hover);
  color: var(--color-text-primary); /* Texte plus visible au survol */
}

.toggle-button.active {
  background-color: var(--color-accent);
  color: #ffffff; /* Texte toujours clair sur un fond d'accent */
  border-color: var(--color-accent-hover);
}

.dark-mode-toggle {
  background: none;
  border: none;
  color: var(--color-text-secondary);
  padding: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  transition: color 0.3s;
}

.dark-mode-toggle:hover {
  color: var(--color-accent-hover);
}

.dark-mode-toggle .moon-icon,
.dark-mode-toggle .sun-icon {
  font-size: 1.2rem;
}

.dark-mode-toggle .moon-icon {
  display: inline;
}

.dark-mode-toggle .sun-icon {
  display: none;
}

@media (max-width: 1024px) {
  nav {
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .nav-toggle {
    order: 3;
    width: 100%;
    justify-content: center;
  }

  .nav-theme {
    order: 2;
  }
}

@media (max-width: 768px) {
  .nav-toggle {
    flex-direction: column;
    width: 100%;
  }

  .toggle-button {
    width: 100%;
    margin-bottom: 0.5rem;
  }
}

</style>

