---
const currentPath = Astro.url.pathname;
import moon from '../assets/images/moon.svg';
import sun from '../assets/images/sun.svg';
import logo from '../assets/images/logo.webp';
---

<header>
  <nav>
    <div>
      <a href='/' class='logo'><img src={logo.src} alt='' width='40px' /></a>
    </div>

    <div class='nav-links'>
      <button class='toggle-button classic' data-type='classic'
        >Mode Classique</button
      >
      <button class='toggle-button memorable' data-type='memorable'
        >Mode MÃ©morisable</button
      >
    </div>
    <div
      class='dark-mode-toggle'
      onclick='toggleDarkMode()'
      aria-label='Basculer le mode sombre'
    >
      <span class='moon-icon'>
        <img src={moon.src} alt='' />
      </span>
      <span class='sun-icon'>
        <img src={sun.src} alt='' />
      </span>
    </div>
  </nav>
</header>

<style>
  header {
    background: none;
    position: sticky;
    top: 20px;
    z-index: 1000;
  }

  nav {
    background-color: var(--color-bg-navbar);
    max-width: 800px;
    border-radius: 50px;
    margin: 0 auto;
    padding: 0.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-text-primary);
    text-transform: uppercase;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links button {
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 8px;
    border: 1px solid var(--color-border-color);
    background: transparent;
    color: var(--color-text-primary);
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
  }

  .nav-links button:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .dark-mode-toggle {
    cursor: pointer;
  }

  .dark-mode-toggle nav {
    background-color: var(--color-bg-navbar);
  }

  .dark-mode-toggle .moon-icon img,
  .dark-mode-toggle .sun-icon img {
    width: 30px;
  }

  .dark-mode-toggle .moon-icon {
    display: inline;
  }

  .dark-mode-toggle .sun-icon {
    display: none;
  }

  @media (max-width: 768px) {
    nav {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
