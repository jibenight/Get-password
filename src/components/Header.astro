---
const currentPath = Astro.url.pathname;
---

<header>
  <nav>
    <div class='logo'>
      <a href='/'>
        <span class='logo-text'>üîê Get-password</span>
      </a>
    </div>
    <div class='nav-toggle'>
      <button class='toggle-button classic' data-type='classic'>
        Mode Classique
      </button>
      <button class='toggle-button memorable active' data-type='memorable'>
        Mode M√©morable
      </button>
    </div>
    <div class='nav-theme'>
      <button
        class='toggle-button dark-mode-toggle'
        onclick='toggleDarkMode()'
        aria-label='Basculer le mode sombre'
      >
        <span class='moon-icon'>üåô</span>
        <span class='sun-icon'>‚òÄÔ∏è</span>
      </button>
    </div>
  </nav>
</header>

<style>
  header {
    background: #1e1e1e;
    border-bottom: 1px solid #2c2c2c;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition: 
      background-color 0.3s,
      box-shadow 0.3s;
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    text-decoration: none;
    color: #e0e0e0;
    font-weight: bold;
    font-size: 1.2rem;
    transition: color 0.3s;
  }

  .logo a:hover {
    color: #4a4a4a;
  }

  .nav-toggle {
    display: flex;
    gap: 0.5rem;
  }

  .toggle-button {
    padding: 0.6rem 1.2rem;
    background-color: #2c2c2c;
    color: #a0a0a0;
    border: 1px solid #3a3a3a;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    transition: 
      background-color 0.3s,
      color 0.3s,
      border-color 0.3s;
  }

  .toggle-button:hover {
    background-color: #3a3a3a;
    color: #d0d0d0;
  }

  .toggle-button.active {
    background-color: #4a4a4a;
    color: #ffffff;
    border-color: #5a5a5a;
  }

  .dark-mode-toggle {
    background: none;
    border: none;
    color: #a0a0a0;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: color 0.3s;
  }

  .dark-mode-toggle:hover {
    color: #d0d0d0;
  }

  .dark-mode-toggle .moon-icon,
  .dark-mode-toggle .sun-icon {
    font-size: 1.2rem;
  }

  .dark-mode-toggle .moon-icon {
    display: inline;
  }

  .dark-mode-toggle .sun-icon {
    display: none;
  }

  @media (max-width: 1024px) {
    nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .nav-toggle {
      order: 3;
      width: 100%;
      justify-content: center;
    }

    .nav-theme {
      order: 2;
    }
  }

  @media (max-width: 768px) {
    .nav-toggle {
      flex-direction: column;
      width: 100%;
    }

    .toggle-button {
      width: 100%;
      margin-bottom: 0.5rem;
    }
  }
</style>

<script>
  function toggleDarkMode() {
    const htmlElement = document.documentElement;
    htmlElement.classList.toggle('dark-mode');

    // Sauvegarde le th√®me choisi
    const isDarkMode = htmlElement.classList.contains('dark-mode');
    localStorage.setItem('theme', isDarkMode ? 'dark' : 'light');
  }

  // Gestion du toggle des g√©n√©rateurs
  function handleToggle(event) {
    const button = event.currentTarget;
    const type = button.dataset.type;

    // S√©lectionner tous les √©l√©ments n√©cessaires
    const buttons = document.querySelectorAll('.toggle-button');
    const classicSection = document.getElementById('classicGenerator');
    const memorableSection = document.getElementById('memorableGenerator');

    // Mettre √† jour les boutons
    buttons.forEach(btn => btn.classList.remove('active'));
    button.classList.add('active');

    // Mettre √† jour les sections
    if (type === 'classic') {
      classicSection.classList.add('active');
      memorableSection.classList.remove('active');
    } else {
      memorableSection.classList.add('active');
      classicSection.classList.remove('active');
    }
  }

  // Fonction d'initialisation
  function init() {
    // Initialisation des boutons de toggle
    const buttons = document.querySelectorAll('.toggle-button');
    buttons.forEach(button => {
      button.addEventListener('click', handleToggle);
    });
  }

  // Ex√©cuter l'initialisation au chargement de la page
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }

  // R√©initialiser lors de la navigation Astro
  document.addEventListener('astro:page-load', init);
  document.addEventListener('astro:after-swap', init);
</script>
