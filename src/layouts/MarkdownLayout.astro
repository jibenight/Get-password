---
// Props pour recevoir les donn√©es Markdown
const { frontmatter } = Astro.props;
---

<article class='info-container'>
  <h2>{frontmatter.title}</h2>
  <p>{frontmatter.description}</p>
  {frontmatter.description2 && <p>{frontmatter.description2}</p>}
  <section>
    <slot />
  </section>
</article>

<style is:global>
  .info-container {
    max-width: 1024px;
    margin: 0 auto;
    padding: 1rem;
    background-color: var(--color-bg-secondary);
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    line-height: 1.6;
  }

  h2 {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .info-container h3 {
    margin-top: 2rem;
    border-bottom: 5px solid var(--color-accent);
    padding-bottom: 0.5rem;
  }

  h4 {
    margin-top: 1.5rem;
  }

  p,
  ul,
  ol {
    margin-bottom: 1rem;
  }

  ul,
  ol {
    padding-left: 2rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  strong {
    font-size: large;
  }

  /* Styles de mode sombre */
  .dark-mode .info-container {
    background-color: #2a2a2a;
  }

  .dark-mode .info-container h3 {
    margin-top: 2rem;
    border-bottom: 5px solid var(--color-accent);
    padding-bottom: 0.5rem;
  }
</style>
