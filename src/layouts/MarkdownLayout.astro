---
// Props pour recevoir les donn√©es Markdown
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<article class='info-container'>
  <h1>{title}</h1>
  <p>{description}</p>
  <section>
    <slot />
  </section>
</article>

<style is:global>
  .info-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--color-bg-secondary);
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    line-height: 1.6;
  }

  h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
  }

  .info-container h3 {
    margin-top: 2rem;
    border-bottom: 2px solid #2a2a2a;
    padding-bottom: 0.5rem;
  }

  h4 {
    margin-top: 1.5rem;
    color: var(--color-text-primary);
  }

  p,
  ul,
  ol {
    margin-bottom: 1rem;
  }

  ul,
  ol {
    padding-left: 2rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  strong {
    color: var(--color-accent);
  }

  /* Styles de mode sombre */
  .dark-mode .info-container {
    background-color: #2a2a2a;
  }

  .dark-mode .info-container h3 {
    margin-top: 2rem;
    border-bottom: 2px solid var(--color-border-color);
    padding-bottom: 0.5rem;
  }
</style>
