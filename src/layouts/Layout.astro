---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='fr' class=''>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Générateur de mots de passe sécurisés et mémorisables'
		/>
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>

	<script is:inline>
		// Script de gestion du mode sombre
		const savedTheme = localStorage.getItem('theme');
		const prefersDarkMode = window.matchMedia('(prefers-color-scheme: dark)');

		function setTheme(theme) {
			document.documentElement.classList.toggle('dark-mode', theme === 'dark');
			localStorage.setItem('theme', theme);
		}

		// Initialisation du thème
		if (savedTheme) {
			setTheme(savedTheme);
		} else {
			setTheme(prefersDarkMode.matches ? 'dark' : 'light');
		}

		// Écouter les changements de préférence système
		prefersDarkMode.addListener((e) => {
			setTheme(e.matches ? 'dark' : 'light');
		});

		// Fonction globale pour basculer le thème
		window.toggleTheme = () => {
			const currentTheme = document.documentElement.classList.contains('dark-mode') ? 'dark' : 'light';
			setTheme(currentTheme === 'light' ? 'dark' : 'light');
		};
	</script>
</html>

<style is:global>
  /* Styles de base pour le mode clair */
  :root {
    --bg-primary: #f6f6f6;
    --bg-secondary: #ffffff;
    --text-primary: #333;
    --text-secondary: #666;
    --border-color: #e0e0e0;
    --accent-color: #4caf50;
    --accent-color-hover: #45a049;
  }

  /* Styles pour le mode sombre */
  :root.dark-mode {
    --bg-primary: #121212;
    --bg-secondary: #1e1e1e;
    --text-primary: #ffffff;
    --text-secondary: #b0b0b0;
    --border-color: #444;
    --accent-color: #81c784;
    --accent-color-hover: #66bb6a;
  }

  /* Transition en douceur */
  html {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    transition: background-color 0.3s, color 0.3s;
  }

  body {
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }

  /* Styles génériques adaptés au mode sombre */
  .dark-mode main {
    background-color: var(--bg-secondary);
  }

  .dark-mode .container {
    background-color: var(--bg-secondary);
    box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
  }

  .dark-mode input,
  .dark-mode select,
  .dark-mode button {
    background-color: #333;
    color: #fff;
    border-color: #555;
  }

  .dark-mode input:focus,
  .dark-mode select:focus,
  .dark-mode button:focus {
    outline: 2px solid var(--accent-color);
  }

  .dark-mode .generate-button {
    background-color: var(--accent-color);
    color: var(--text-primary);
  }

  .dark-mode .generate-button:hover {
    background-color: var(--accent-color-hover);
  }

  .dark-mode .strength-bars .bar {
    background-color: #444;
  }

  .dark-mode .strength-bars .bar.weak {
    background-color: #ff4444;
  }
  .dark-mode .strength-bars .bar.medium {
    background-color: #ffbb33;
  }
  .dark-mode .strength-bars .bar.strong {
    background-color: #00c851;
  }
  .dark-mode .strength-bars .bar.very-strong {
    background-color: #007e33;
  }
</style>
